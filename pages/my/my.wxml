<view class="container more">
  <view class="user flex-wrp">
    <view class="avatar flex-item">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    </view>
    <view class="user-info flex-item">
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <text class="edit">已绑定平台账号：{{ptzh}}</text>
    </view>
  </view>

  <view class="my">
    <view class="my-item flex-wrp" bindtap="xgsjh">
      <view class="myitem-icon flex-item">
        <image src="../../images/phone.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>修改手机号</text>
      </view>
    </view>
    <view class="my-item flex-wrp" bindtap="xgsjdh">
      <view class="myitem-icon flex-item">
        <image src="../../images/phone_d.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>修改手机短号</text>
      </view>
    </view>
    <view class="my-item flex-wrp" bindtap="xgbgdh">
      <view class="myitem-icon flex-item">
        <image src="../../images/phone_bg.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>修改办公电话</text>
      </view>
    </view>
    <view class="my-item flex-wrp" bindtap="xgyx">
      <view class="myitem-icon flex-item">
        <image src="../../images/email.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>修改邮箱</text>
      </view>
    </view>


  </view>




</view>
<button class="exit" type="warn" loading="{{loading_tc}}" bindtap="exit"> 退出并解除绑定 </button>