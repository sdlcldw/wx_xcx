.container{
    
}
.xxk-top {
    height: 100rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.xxk-top-htgz, .xxk-top-tggz {
    width: 50%;
    text-align: center;
    padding-top: 25rpx;
    font-size: 14px;
    position: relative;
}

.xxk-active {
    color: #ffffff;
    background-color: #d64944;
}

.xxk-wxz {
    color: #000000;
    background-color: #f6f6f6;
}

.sjx {
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    width: 0px;
    height: 0px;
    border-top: 10px solid rgba(0, 0, 0, 0);
    border-right: 10px solid rgba(0, 0, 0, 0);
    border-bottom: 10px solid rgb(255, 255, 255);
    border-left: 10px solid rgba(0, 0, 0, 0);
}
.htgz,.tggz{
    width: 100%;
    height: 100%;
}
.gzcx_rqxz{
    width: 100%;
    margin-top:10px;    
    border: 2px dashed #f3f3f3; 
}
.gzcx_rqxz_cx{
    width: 100%;
    height: 100px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-top:10px;
    text-align: center;
    background-color: #ffffff;
}
.htgz_sm{
    padding: 10px 15px; 
    font-size: 14px;
    background-color: #fffec6;
}
.htgz_cx{
    width:33%;
    position: relative;
}
.htgz_button{
    position: absolute;
    top:50%;
    transform: translateY(-50%);
    font-size:16px;
    width:100px;
}
.htgz_tabel{
    width: 100%;
    margin-top: 20px;
    margin-bottom:20px;
    display: flex;
    flex-direction:column;
    justify-content:center;
}
.htgz_tabel_row{
    display:flex;
    flex-direction: row;
    justify-content: center;
    font-size: 14px;
}
.htgz_tabel_cell{
    width: 100px;
    height: 30px;
    padding-top:10px;
    text-align: center;
}
.yfgz{
    background-color: #00cc65;
    color: #ffffff;
}
.sfgz{
    background-color: #ffee00;
    color: #ff0000;
}
